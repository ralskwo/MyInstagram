<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInstagramUploadActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/content_input"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="내용을 작성해주세요"/>

    <TextView
        android:id="@+id/view_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#424242"
        android:text="사진 선택"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/upload_post"
        android:layout_below="@+id/view_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#454545"
        android:text="업로드"
        android:textSize="40dp"
        android:textColor="#FFFFFF"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/all_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="전체"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="#FB4141"/>
        <TextView
            android:id="@+id/my_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="본인"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="#DFFB41"/>
        <TextView
            android:id="@+id/upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="업로드"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="#47FB41"/>
        <TextView
            android:id="@+id/user_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="정보"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="#41D6FB"/>

    </LinearLayout>


</RelativeLayout>